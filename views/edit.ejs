<% layout("./layouts/boilerplate.ejs"); %>
<body>
    <div class="container-md mt-3 row">
      <div class="col-8 offset-2">
        <h2>Edit your listing</h2>
        <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="title" class="form-label">Enter title</label>
            <input
              type="text"
              name="listing[title]"
              class="form-control"
              id="title"
              placeholder="Title"
              value="<%= listing.title %>"
              required
            />
          </div>
          <div class="mb-3">
            <label for="desc" class="form-label">Enter description</label>
            <textarea
              class="form-control"
              name="listing[description]"
              id="desc"
              rows="3"
              required
            ><%= listing.description %></textarea>
          </div>
          <div class="mb-3">
            <label for="url" class="form-label">Enter image URL or Link</label>
            <input
              type="url"
              name="listing[image]"
              value="<%= listing.image %>"
              class="form-control"
              id="url"
              placeholder="Link"
            />
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Enter price</label>
            <input
              value="<%= listing.price %>"
              name="listing[price]"
              class="form-control"
              id="price"
              placeholder="0"
              required
            />
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Enter your location</label>
            <input
              type="text"
              name="listing[location]"
              value="<%= listing.location %>"
              class="form-control"
              id="location"
              placeholder="Location"
              required
            />
          </div>
          <div class="mb-3">
            <label for="country" class="form-label">Enter your country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
              class="form-control"
              id="country"
              placeholder="country"
              required
            />
          </div>
          <div class="text-center">
            <button class="btn btn-dark w-50">Edit</button>
          </div>
        </form>
      </div>
      </div>
    </body>
</body>